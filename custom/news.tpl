<div class="col-main-news col-md-6 col-xs-12">
	<li class="item">
		<div class="postWrapper row">
		[gallery_photo-news=1]
			<div class="col-xs-4 ">
				<a href="{full-link}">
					<div class="postImage">
						<img src="{gallerythumb_photo-news=1}" alt="">
					</div>
				</a>
				<a class="button" href="{full-link}">Подробнее</a>
			</div>
			[/gallery_photo-news=1] 
			<div class="col-xs-12 text-center [gallery_photo-news=1] tl col-xs-8[/gallery_photo-news=1] ">
				<div class="postTitle">
					<h2>
						<a href="{full-link}">{title}</a>
					</h2>
				</div>
				<div class="postDetails">
					<span class="postDetails-date">
						<i class="fa fa-calendar" aria-hidden="true"></i>{date}</span>
					<span class="postDetails-user">
						<i class="fa fa-user" aria-hidden="true"></i>
						Автор: {author} </span>
				</div>
				<div class="postContent">
					<p>{short-story limit="190"} </p>
				</div>
			</div>
		</div>
	</li>
</div>
