<div class="product">
	<a href="{full-link}" class="product-image" itemprop="url">
		<img src="[xfvalue_image_url_photo]" alt="" itemprop="image" />
	</a>
	<h3 class="product-name">
		<a href="#" title="">{title}
		</a>
	</h3>
	<div class="price-box">
		[xfgiven_price_new]
		<p class="old-price">
			<span class="price"> ₴[xfvalue_price] </span>
		</p>
		<p class="special-price">
			<span class="price"> ₴[xfvalue_price_new] </span>
		</p>
		[/xfgiven_price_new]
		[xfnotgiven_price_new]
		<span class="regular-price">
			<span class="price">₴[xfvalue_price]</span>
		</span> 
		[/xfnotgiven_price_new]
	</div>
	<p class="no-rating">
		<a href="#">Будь первым кто оставит отзыв этому товару 
		</a>
	</p>
</div>